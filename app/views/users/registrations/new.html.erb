<div class="login-page">
  <div class="form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "register-form") do |f| %>
  <%= devise_error_messages! %>
    <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
    <%= f.email_field :email, autofocus: true, placeholder: "e-mail (opcionalno)" %>
    <%= f.label "Lozinka" %>
    <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> minimalno znakova)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Lozinka" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Potvrdi lozinku" %>
        <%= f.button "Registriraj se", :action_name => :submit %>
    <p class="message">VeÄ‡ si registriran? <%= link_to 'Prijavi se', new_user_session_path  %></p>

  <div class="actions">

  </div>
<% end %>
  </div>
</div>
